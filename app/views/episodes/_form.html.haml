= form_for @episode do |f|
  -if @episode.errors.any?
    #error_explanation
      %h2= "#{pluralize(@episode.errors.count, "error")} prohibited this episode from being saved:"
      %ul
        - @episode.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :guest
    = f.text_field :guest
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :show_notes
    = f.text_area :show_notes
  .field
    = f.label :intro
    = f.text_area :intro
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
